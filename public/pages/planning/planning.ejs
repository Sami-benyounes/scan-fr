    </nav>
  </header>

  <div class="planning-container">
    <div class="main-planning">
      <div class="list-mangas">
        <h2>AVANCÃ‰E DE NOS MANGAS</h2>
        <% 
        var data = [
      { name: "Ace novel", avancement : "Traduction en cours", image : "./images/ace-novel.png"  },
      { name: "Berserk", avancement : "Edition en cours", image : "./images/ace-novel.png" },
      { name: "Black Clover" , avancement : "En attente du prochain chapitre", image : "./images/ace-novel.png"},
      { name: "Blue Lock", avancement : "Traduction en cours", image : "./images/ace-novel.png" },
      { name: "Demon Slayer" , avancement : "En attente du prochain chapitre", image : "./images/ace-novel.png"},
      { name: "Dr. Stone", avancement : "Edition en cours", image : "./images/ace-novel.png" },
      { name: "Haikyuu" , avancement : "En attente du prochain chapitre", image : "./images/ace-novel.png"},
      { name: "Hajime no Ippo" , avancement : "Traduction en cours", image : "./images/ace-novel.png"},
      { name: "Kenga Ashura" , avancement : "En attente du prochain chapitre", image : "./images/ace-novel.png"},
      { name: "Kingdom" , avancement : "En attente du prochain chapitre", image : "./images/ace-novel.png"},
      ];
        %>
        <% for(var i=0; i < data.length; i++) { %>
        <a href="" class="manga">
          <div class="manga-image-info">
            <div class="m-image">
              <img src="<%= data[i].image %>" alt="">
            </div>
            <div class="p-info">
              <div class="p-title"><%= data[i].name %> :
                <% if (data[i].avancement === "Edition en cours") { %>
                <span class="edit p-etat"><%= data[i].avancement %></span>
                <%} else if(data[i].avancement === "Traduction en cours"){ %>
                <span class="trad p-etat"><%= data[i].avancement %></span>
                <% }else { %>
                <span class="p-etat"><%= data[i].avancement %></span>
                <% } %>
              </div>
              <div class="p-progress">
                <% if (data[i].avancement === "Edition en cours") { %>
                <div class="edit p-progress-statut"></div>
                <%} else if(data[i].avancement === "Traduction en cours"){ %>
                <div class="trad p-progress-statut"></div>
                <% }else { %>
                <div class="p-progress-statut"></div>
                <% } %>
              </div>
            </div>
          </div>
          <div class="manga-rating">
            <div class="p-public">Tout public</div>
          </div>
        </a>
        <% } %>
      </div>
    </div>
  </div>
  <%= require('../partials/footer.ejs')() %>

</body>

</html>